.card.w-100
  .card-header
    %h4.mb-0
      Ãšltimos Mensajes de Casillas
      = fa_icon("sitemap", class: "pull-right")
      .clearfix
  %ul.list-group.list-group-flush
    - @segments_with_messages.each do |segment|
      %li.list-group-item
        = link_to "#", class: "chat-link", "data-chat-id" => segment.id, "data-chat-type" => "segment" do
          .row
            .col
              = segment.name
            .col-2
              %span.badge.badge-warning
                = fa_icon("comment")
                = segment.messages.count
