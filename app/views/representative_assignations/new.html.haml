#users-index
  #users-index-actions.row.no-gutters
    = search_form_for @q, url: new_segment_representative_assignation_path(@segment), class: "col-8 col-md-10 col-lg-11 users-search-form" do |f|
      .input-group
        = f.search_field(:name_or_father_last_name_or_mother_last_name_or_username_or_email_cont, class: "form-control", placeholder: t(:search), type: "text" )
        = button_tag class: 'btn btn-outline-secondary' do
          = fa_icon "search"
        .clearfix

    = link_to segment_path(@segment), class: "btn btn-primary col", id: "assign-users-link" do
      = fa_icon('undo')
      Regresar

  .card.user-transfer-list-card
    .card-header.user-transfer-list-card-header
      %p 
        Asigne usuarios a
        %span.font-weight-bold= @segment.name
        Dándo clic en los botones a la derecha de cada usuario
    - if @users.empty?
      .container.messenger
        .card.text-center
          .card-body
            %h5.card-title No hay usuarios
            %p.card-text La lista de usuarios esta vacía, para llenarla elíge una de las siguientes dos opciones.
            = link_to segment_users_path(@segment), class: "btn btn-primary margen" do
              = fa_icon("users")
              Crear Usuarios
            = link_to new_segment_users_import_path, class:  "btn btn-primary" do
              = fa_icon("upload")
              Importar Usuarios
    - else
      %ul.list-group.user-transfer-list
        = render partial: "user", collection: @users
   