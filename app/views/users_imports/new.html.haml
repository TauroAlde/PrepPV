.container-fluid
  .row
    .col.col-md-9
      %h3.pt-3 Importar Usuarios
    = link_to segment_path(@segment), class: "btn btn-secondary col-4 col-md-3" do
      = fa_icon('undo')
      Regresar
  .row
    .col-12
      = form_for @new_segment_user_import, url: segment_users_imports_path(@segment, @new_segment_user_import) do |f|
        .row
          .col-12.col-md-4.mb-4
            = f.file_field :file, class: "p-2"
            #progress.progress
              .progress-bar{ role: "progressbar", "aria-valuenow" => "0", "aria-valuemin" => "0", "aria-valuemax" => "100" }
          #loader-container.col-12.col-md-4.pb-4.d-none
            .loader.m-auto

    .col-12.mt-4#import-messages-pool
