<% if @prep_step_four.errors.empty? %>
  $("#next-step-wrapper").removeClass("d-none");
  $(".prep-form").replaceWith("<%= j render '/prep_processes/step_four_form' %>");
  $.notify("Información guardada", { globalPosition: "top center", className: 'success' });
  window.bindCandidacyCounters()
<% else %>
  $.notify("Hubo un error al guardar la información, por favor contacte a su administrador", { globalPosition: "top" });
<% end %>